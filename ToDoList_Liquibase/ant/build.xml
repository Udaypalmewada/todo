<?xml version="1.0" encoding="UTF-8"?>

<project name="liquibase" default="update">

	<property environment="env" />
	<property name="ANT_INSTANCE" value="${env.JDT_INSTANCE}" />

	<include file="resources/${ANT_INSTANCE}/liquibase-properties.xml" />

	<target name="prepare">
		<path id="classpath">
			<fileset dir="../ant/lib">
				<include name="**/*.jar" />
			</fileset>
		</path>


		<taskdef resource="liquibasetasks.properties">
			<classpath refid="classpath" />
		</taskdef>
	</target>

	<target name="update" depends="prepare">
		<updateDatabase changeLogFile="${db.changelog.file}" driver="${database.driver}" url="${database.url}" username="${database.username}" password="${database.password}" classpathref="classpath" defaultSchemaName="${database.defaultSchemaName}"/>
	</target>
</project>
